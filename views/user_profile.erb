<div id="wrapper">
  <div id="wrapperOne">
    <div class="form-box">
        <form class="user-form" method="post" action="/publish_form">
          <h3>Publish a New Post</h3>
          <input type="text" name="post_content" value="fds" maxlength="200" style="width:300px;height:40px">
          <br><br>
          <input type="submit" value="Submit">
        </form>
    </div>
  </div>
  <div id="wrapperTwo">
    <h2>NYCBT Feed</h2>
    <% @posts.each_with_index do |post, index| %>
      <% user_record = @user_array[index] %>
      <div class="postContent">
        <p><%= post[:post_content] %> BY: <%= user_record[:username] %></p>
        <p>AT: <%= post[:created_at] %></p>
      </div>
      <% puts "post[:post_content]: #{post[:post_content].inspect}" %>
    <% end %>
  </div>
</div>
